<UserControl x:Name="ImportTextureControl" x:Class="TextureCombiner.ImportTexture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextureCombiner"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="160" Height="400">
    <Grid x:Name="ImportTextureGrid" Background="#FFD4D4C3" Width="160">
        <Image x:Name="ImgTexture" HorizontalAlignment="Left" Height="112" VerticalAlignment="Top" Width="112" Margin="27,80,0,0"/>
        <Image x:Name="ImgBorder" HorizontalAlignment="Left" Height="120" VerticalAlignment="Top" Width="120" Margin="22,75,0,0" Source="/BorderBox.png" Panel.ZIndex="1"/>
        <Button x:Name="BtnImportTexture" Content="Import" HorizontalAlignment="Left" VerticalAlignment="Center" Height="25" Width="50" Margin="55,150,0,0" FontSize="14" Click="OnImportTextureClicked"/>
        <TextBlock x:Name="TxtChannel" HorizontalAlignment="Center" TextWrapping="Wrap" Text="R" VerticalAlignment="Top" Margin="0,30,0,0" Width="15" Height="20" FontSize="14" TextAlignment="Center" FontWeight="Bold"/>
    </Grid>
</UserControl>
